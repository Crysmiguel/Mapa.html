   <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Mapa Interativo</title>
    <!-- Inclui a biblioteca Leaflet, que é usada pelo Folium -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
</head>
<body>
    <div id="map" style="width: 100%; height: 600px;"></div>

    <script>
        // Cria o mapa e define a visualização inicial
        var map = L.map('map').setView([-23.2237, -45.9009], 12);  // Coordenadas iniciais

        // Adiciona o mapa base do OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Exemplo: Adicionar um marcador
        L.marker([-23.2237, -45.9009]).addTo(map)
            .bindPopup('Este é o ponto central.').openPopup();
    </script>
</body>
</html>
